
        <h2> <span class="glyphicon glyphicon-user">Iniciar Session</span></h2>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name) , html: { role: "form"} ) do |f| %>
          <div class="form-group"><%= f.label :username , :autofocus => true %><br />
          <%= f.text_field :username, :autofocus => true , class: "form-control "  %></div>

          <div class="form-group"><%= f.label :password %><br />
          <%= f.password_field :password , class: "form-control "  %></div>

          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>

          <div><%= f.submit "Ingresar", class: "btn btn-info" %></div>
        <% end %>

        <div class="text-center">
            <%= render "devise/shared/links" %>
        </div>



